<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_border_background_white"
    android:layout_margin="@dimen/padding_margin_16dp"
    android:layout_below="@+id/ll_problem_price_desc"
    android:id="@+id/ll_payment_method">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:textColor="@color/color_black"/>

        <RadioGroup
            android:id="@+id/radioPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tunai"
                android:textColor="@color/color_black"
                android:layout_marginBottom="@dimen/padding_margin_8dp"/>

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kartu Kredit"
                android:textColor="@color/color_black"
                android:drawableRight="@drawable/ic_credit_card"
                android:layout_marginRight="@dimen/padding_margin_8dp"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>