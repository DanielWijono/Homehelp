<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:id="@+id/app_bar_layout_atap">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorAccent"
        app:theme="@style/ToolbarColoredBackArrowWhite"
        app:popupTheme="@style/AppTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:id="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_toolbar_atap">
            <TextView
                android:textSize="20dp"
                android:id="@+id/tv_title_toolbar"
                android:textColor="@color/color_white"
                android:text="Pemesanan"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.shuhart.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_margin_16dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                app:sv_selectedCircleColor="@color/colorAccent"
                app:sv_selectedTextColor="@color/colorAccent"
                app:sv_stepLineWidth="1dp"
                app:sv_stepPadding="0dp"
                app:sv_nextTextColor="@color/color_grey_500"
                app:sv_nextStepLineColor="@color/color_red_500"
                app:sv_doneCircleColor="@color/color_blue_A700"
                app:sv_doneStepLineColor="@color/fall"
                app:sv_doneCircleRadius="12dp"
                app:sv_selectedCircleRadius="12dp"
                app:sv_selectedStepNumberColor="@color/color_white"
                app:sv_stepViewStyle="@style/StepView"
                app:sv_doneStepMarkColor="@color/colorAccent"
                app:sv_stepNumberTextSize="12sp"
                app:sv_animationType="Line"
                app:sv_typeface="@font/proxima_nova_medium"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_4dp"
                android:layout_marginBottom="@dimen/padding_margin_16dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_step_one"
                android:id="@+id/img_toolbar"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>
