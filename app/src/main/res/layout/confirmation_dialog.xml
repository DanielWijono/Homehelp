<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_margin_16dp"
    android:padding="@dimen/padding_margin_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda yakin ?"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding_margin_16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan periksa kembali pesanan anda"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding_margin_16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/back_dialog"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/next_button"
                android:layout_weight="0.5"
                android:id="@+id/next_button_dialog"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>