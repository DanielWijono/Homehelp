<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/border_tips_background_white"
        android:layout_margin="@dimen/padding_margin_16dp"
        android:id="@+id/ll_home_tips">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/tips_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hama"
            android:textSize="13dp"
            android:textColor="#95989A"
            app:fontFamily="@font/proxima_nova_medium"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_margin_8dp"
            android:layout_marginRight="@dimen/padding_margin_8dp"
            android:layout_marginBottom="@dimen/padding_margin_4dp"
            android:layout_marginTop="@dimen/padding_margin_8dp"
            android:id="@+id/tips_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hama desc
ajajja"
            android:textSize="14dp"
            android:textColor="@color/color_black_65"
            app:fontFamily="@font/proxima_nova_medium"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_margin_8dp"
            android:layout_marginRight="@dimen/padding_margin_8dp"
            android:id="@+id/tips_desc"/>

    </LinearLayout>

</LinearLayout>