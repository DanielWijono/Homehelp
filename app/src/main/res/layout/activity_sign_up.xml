<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_sign_up"
    tools:context="com.example.daniel.homehelp.activity.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/signup_border_background_white"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buat Akun"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_name"
                android:alpha="0.7"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"
                android:textSize="16dp"
                app:fontFamily="@font/proxima_nova_medium"
                android:singleLine="true"
                android:alpha="0.7"
                android:id="@+id/et_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_telephone"
                android:alpha="0.7"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+62"
                android:textSize="16dp"
                android:textColor="@color/color_black"
                app:fontFamily="@font/proxima_nova_medium"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"
                android:linksClickable="false"
                android:contextClickable="false"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Telepon"
                android:textSize="16dp"
                app:fontFamily="@font/proxima_nova_medium"
                android:singleLine="true"
                android:alpha="0.7"
                android:inputType="phone"
                android:id="@+id/et_phone_number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="34dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:alpha="0.7"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="16dp"
                app:fontFamily="@font/proxima_nova_medium"
                android:alpha="0.7"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:id="@+id/et_email"/>
        </LinearLayout>

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_white"
            app:fontFamily="@font/proxima_nova_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="50dp"
            android:padding="8dp"
            android:background="@drawable/signup_button"
            android:id="@+id/tv_sign_up"/>

    </LinearLayout>

</LinearLayout>
