<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="@dimen/padding_margin_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_cancel_agenda"
            android:id="@+id/img_agenda_dialog"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batalkan Pesanan"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/proxima_nova_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_margin_16dp"
            android:id="@+id/tv_title_agenda_dialog"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda yakin untuk membatalkan pesanan ?"
            android:textSize="16dp"
            android:textColor="@color/color_black_65"
            app:fontFamily="@font/proxima_nova_regular"
            android:lineSpacingExtra="@dimen/padding_margin_3dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_margin_16dp"
            android:id="@+id/tv_cancel_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_margin_24dp"
            android:layout_marginBottom="@dimen/padding_margin_16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textSize="15dp"
                android:textColor="@color/color_white"
                android:gravity="center"
                app:fontFamily="@font/proxima_nova_semibold"
                android:background="@drawable/signup_button"
                android:layout_marginRight="@dimen/padding_margin_16dp"
                android:layout_weight="0.5"
                android:id="@+id/tv_cancel_order_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batalkan"
                android:textSize="15dp"
                android:textColor="@color/color_black_65"
                android:textStyle="bold"
                android:background="@drawable/signup_border_background_white"
                app:fontFamily="@font/proxima_nova_semibold"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/tv_cancel_order"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>